@using AuctionApp.Common.Constants
@using Microsoft.AspNetCore.Mvc.Rendering
@model ItemViewModel

@{
    ViewData["Title"] = "Update";
}

<h2>Update Item</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Item" asp-action="Update" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" class="form-control" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input disabled="disabled" asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input disabled="disabled" asp-for="Status" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Item" asp-action="Search">Back to your Items</a>
</div>

