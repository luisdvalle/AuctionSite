@model AuctionApp.Models.AuctionDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Auction Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ItemName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ItemName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.StartingAt)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StartingAt)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FinishingAt)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FinishingAt)
        </dd>
        @if (Model.SoldAt > 0)
        {
            <dt>
                @Html.DisplayNameFor(model => model.SoldAt)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SoldAt)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.BuyerEmail)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.BuyerEmail)
            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.Bidders)
        </dt>
        @foreach (var bidder in Model.Bidders.OrderByDescending(b => b.Value))
        {
            <dd>
                Bidder: @bidder.Key | Bid: $@bidder.Value
            </dd>
        }
    </dl>
    <br />
</div>
<div>
    <a asp-controller="Item" asp-action="Search">Back to your Items</a>
</div>
